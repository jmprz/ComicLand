<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.comicland.comicland.HelloController" spacing="10">
    <Label text="ComicLand" styleClass="title-primary" />
    <HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:id="filterBox" spacing="10" alignment="CENTER">
        <ToggleButton fx:id="bestSellingFilter" text="Best Selling" />
        <ToggleButton fx:id="actionFilter" text="Action" />
        <ToggleButton fx:id="adventureFilter" text="Sci-Fi" />
        <ToggleButton fx:id="fantasyFilter" text="Superhero" />
        <ToggleButton fx:id="sciFiFilter" text="Violence" />
    </HBox>
    <HBox fx:id="displayContainer" styleClass="no-border-textarea" spacing="20" alignment="CENTER" />
    <HBox fx:id="cartContainer" alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="cartButton" text="My Cart" styleClass="cart-button"  onAction="#openCartWindow" />
    </HBox>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
